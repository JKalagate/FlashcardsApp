<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="220dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_grey3"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_cvbv"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:cardCornerRadius="12sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_grey2"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12sp">

                <ImageView
                    android:id="@+id/iv_image_cvbv"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#CCCCCC" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_cvbv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latobold"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="Lesson Name"
                    android:textAlignment="center"
                    android:textColor="#383940"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/pb_cvbv"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tv_number_cvbv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/latobold"
                    android:gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="0/34"
                    android:textAlignment="center"
                    android:textColor="#383940"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_add_cvbv"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_library_add" />

        <ImageView
            android:id="@+id/iv_storage_cvbv"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_storage" />

        <ImageView
            android:id="@+id/iv_edit_cvbv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/iv_refresh_cvbv"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_refresh" />

        <ImageView
            android:id="@+id/iv_delete_cvbv"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_delete" />


    </LinearLayout>


</LinearLayout>